<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets"
        xmlns:rim="http://www.blackberry.com/ns/widgets"
        version="1.0.0.1" id="INKtalkApp">
        <rim:navigation mode="focus" />  
    <name>INKtalk</name>
    <author>Libin</author>
    <description>An App for viewing INKtalks</description>
    <icon src="images/ink.png"/>
    <content src="index.html"/>
    <rim:transitionEffect type="fadeIn" />
    <rim:permissions>  
        <rim:orientation mode="landscape"/>
    </rim:permissions>    
    <access uri="http://youtube.com" subdomains="true" />
    <access uri="http://inktalks.com" subdomains="true" />
    <feature id="blackberry.push" />
    <feature id="blackberry.ui.menu" />
    <feature id="blackberry.ui.dialog"/>
    <feature id="blackberry.identity" />
    <feature id="blackberry.system.event" />
    <feature id="blackberry.app" />
    <feature id="blackberry.app.event"/>
</widget>